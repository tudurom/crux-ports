# Description: Off-the-Record Messaging Library and Toolkit
# URL:         http://otr.cypherpunks.ca/
# Packager:    ix, arcetera@openmailbox.org
# Maintainer:  tudurom, xenogenesis@openmailbox.org
# Depends on:  libgcrypt

name=libotr
version=4.1.1
release=1
source=("http://otr.cypherpunks.ca/$name-$version.tar.gz")

build() {
	cd $name-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
